# Supabase Configuration
# Get these values from your Supabase project dashboard
VITE_SUPABASE_URL=your_supabase_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# Optional: Supabase Service Role Key (for admin functions)
# VITE_SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Game Configuration
VITE_DEFAULT_DIFFICULTY=medium
VITE_DEFAULT_CATEGORY=random
VITE_MAX_ROOM_PLAYERS=4
VITE_GAME_TIMEOUT=300000

# Feature Flags
VITE_ENABLE_MULTIPLAYER=true
VITE_ENABLE_ACHIEVEMENTS=true
VITE_ENABLE_CHAT=true
VITE_ENABLE_SOUND=true
VITE_ENABLE_ANIMATIONS=true

# Analytics (Optional)
# VITE_GA_TRACKING_ID=your_google_analytics_tracking_id